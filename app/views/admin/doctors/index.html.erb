<% if @doctors.any? %>
  <table>
    <thead>
      <th>#</th>
      <th><%= t(:name) %></th>
      <th><%= t(:email) %></th>
      <th></th>
    </thead>
    <tbody>
      <% @doctors.each_with_index do |doctor, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= link_to doctor.name, admin_doctor_path(doctor) %></td>
          <td><%= mail_to doctor.email%></td>
          <td><%= link_to 'edit', edit_admin_doctor_path(doctor) %></td>
          <td><%= link_to 'destroy', admin_doctor_path(doctor), method: :delete, confirmation: { date: 'Are you sure?'} %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
<% else %>
  <h3>No Doctors <%= link_to 'add', new_admin_doctor_path%></h3>
<% end %>