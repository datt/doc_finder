
%section.cousreListWrapper
  .container
    .row
      .courseListContainer.pull-right.searchContainer
        %h4 doctors

        %form.searchForm{name: "searchText", type: "text",filter_name: "name"}
          .searchBox
            %input{placeholder: "Search with symptom or doctor", :type => "text", class: "searchHeader"}
          %input{:type => "submit", :value => ""}

      .span3
        .filterWrapper
          .filterHeading
            %a.openFilter
            %h4 Filter criteria
            -#%a.resetLink#resetFilter{href: "javascript:void(0);"} Reset
          %ul.mobileAccordian
            %li
              %a
              .accordianContainer
                .inputContainer
                  %h6 Area
                  .selListWrap
                    = select_tag("area_code", options_for_select(@areas.collect {|p| [ p.name.capitalize, p.zipcode ] }),{class: "addressBox", title: "Select Area", prompt: "Select Area", tabindex: "1"})

                .inputContainer
                  %h6 Specialty
                  %ul.filtersList.specialtyFilter
                    - SPECIALTIES.each do |specialty|
                      %li
                        %input.specialty{filter_name: "specialties[]", name: "specialties", type: "checkbox", value: specialty.downcase, id: "specialty#{specialty}"}
                        %label{for: "specialty#{specialty}"} #{specialty}

                -#.inputContainer
                  %h6 Timings
                  %ul.filtersList.noScroll
                    - TIMINGS.each do |time|
                      %li
                        %input{filter_name: "timings[]", name: "time", type: "checkbox", value: time, id: "time#{time}"}
                        %label{for: "time#{time}"} #{time}

                .inputContainer
                  %h6 Charges
                  %label#amount
                  #chargesSlider

                .inputContainer
                  %h6 Expirience
                  %label#years
                  #expirienceSlider

      .span9.courseListContainer
        %ul.doctorsList
          - @doctors.each do |doctor|
            %li{"data-name"=> "#{doctor.name}", "data-fees"=>"#{doctor.fees.to_i}", "data-years"=>"#{doctor.exp_in_years}", "data-symptoms"=>"#{doctor.meta_keyword}", "data-specialty"=>"#{doctor.expertise.downcase}"}
              %img{:src=>"#{doctor.image}"}
              .dr-info
                %h3
                  %a{:href=>"/doctors/#{doctor.id}"} Dr. #{doctor.name.gsub(/(Mr|Dr|Mrs|Ms)|\./i,"")}
                %p
                  #{doctor.expertise}
                  %br
                    practicing since #{doctor.experience.strftime("%Y")}
                - @clinics.select{|c| c.doctor_id==doctor.id}.each do |clinic|
                  %a.clinic{:href=>"javascript:void(0);", "data-area"=>"#{clinic.zipcode}"}
                    #{clinic.address1.capitalize}
          %li.noDoc{style: "display: none"}
            %label We're sorry, No doctor found.




