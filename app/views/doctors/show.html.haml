  .clearfix
  .clinics
    %h3
      Clinics:
    %ul.bxslider
      -@doctor.clinics.each do |clinic|
        %li
          .clinic_details
            .span2
              Name:
            .span3
              = link_to clinic.name, doctor_clinic_path(@doctor, clinic)
            .span2
              Adress:
            .span3
              = clinic.address1
            .span2
              City:
            .span3
              = clinic.city
            .span2
              State:
            .span3
              = clinic.state
            .span2
              Country:
            .span3
              = Country[clinic.country]
            .span2
              ZipCode:
            .span3
              = clinic.zipcode
            .span2
              Phone Number:
            .span3
              = clinic.contact

