= javascript_include_tag '/jquery.bxslider/jquery.bxslider.min.js'
= stylesheet_link_tag '/jquery.bxslider/jquery.bxslider.css'
.content
  .basicInfo
    %h3
      = @doctor.name
    = image_tag @doctor.image_url(:thumb).to_s
  .clinics
    %h3
      Clinics:
    %ul.bxslider
      -@doctor.clinics.each do |clinic|
        %li
          .clinic_details
            .span2
              Name:
            .span3
              = clinic.name
            .span2
              Adress:
            .span3
              = clinic.address1
            .span2
              City:
            .span3
              = clinic.city
            .span2
              State:
            .span3
              = clinic.state
            .span2
              Country:
            .span3
              = Country[clinic.country]
            .span2
              ZipCode:
            .span3
              = clinic.zipcode
            .span2
              Phone Number:
            .span3
              = clinic.contact

:javascript
  $(document).ready(function(){
    $('.bxslider').bxSlider();
  });