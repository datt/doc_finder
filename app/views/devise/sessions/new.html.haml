.content
  .sign_container
    %h2 Sign in
    %hr
    .sign_left
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f|
        .control-group
          = f.input :email, required: false, autofocus: true
        .control-group
          = f.input :password, required: false
        .control-group
          .controls
            = f.submit "Sign in", class: "btn btn-large btn-primary"
            = link_to "Forgot your password?", new_password_path(resource_name)
    .sign_right.col-md-4.col-sm-12
      = link_to "Login With Facebook", '/auth/facebook', class: 'btn btn-primary btn-large btn-facebook', id: 'sign_in'
      = link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-large btn-primary'
    .clear
    