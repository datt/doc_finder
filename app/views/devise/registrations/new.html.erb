<div class="content">
  <div class="sign_container">
    <h2>Sign up</h2>
    <div class="sign_left">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%resource.build_patient%>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.simple_fields_for :patient do |patient| %>
                <%= patient.input :name, autofocus: true, required: true %>
                <%= patient.input :age, required: true %>
                <%= patient.input :contact %>
                <%= patient.input :address %>
            <%end%>
            <%= f.input :email, required: true %>
            <%= f.input :password, required: true %>
            <%= f.input :password_confirmation, required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
      <% end %>
    </div>
    <div class="sign_right col-md-4 col-sm-12">
      <button type="button" class="btn btn-primary btn-block btn-facebook">Login With Facebook</button>
    </div>
    <div class="clear"></div>
    <div class= "bottom_sign_in_links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
